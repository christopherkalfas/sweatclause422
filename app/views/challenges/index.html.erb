<div class="card shadow-lg rounded"
    style="border: 1px;
        width: 50%;">
<div class="card-header bg-dark text-light">
    <h2>All Challenges</h2>
</div>
    <ul class="list-group list-group-flush">
        <% @challenges.each do |challenge| %>
            <li class="list-group-item"><h4><%= link_to(challenge.name, challenge_path(challenge)) %></h4></li>
        <% end %>
    </ul>
<div class="card-footer"><%= link_to('Add a Challenge', new_challenge_path) %></div>
</div>


