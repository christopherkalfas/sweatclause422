<div class="col-sm-6">
<div class="card" style="margin: 15px; padding:15px; margin-left:15px;">
<h6><%= link_to('All challenges', challenges_path) %> |


<%= link_to("Edit", edit_challenge_path(@challenge)) %></h6>
</div>
</div>
</div>