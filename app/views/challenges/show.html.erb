<div class="row row-cols-1 row-cols-md-2 mx-auto">
  <div class="col mb-5">
    <div class="card">
      <h2 class="card-header bg-secondary text-light"> 
          <%= @challenge.name %>
      </h2>
        <div class="card-body">
          <div class="row">
              <h5 class="card-title pb-2">
                <em>
                  <%= @challenge.start_date.strftime("%a %b #{@challenge.start_date.day.ordinalize}, %Y") %> -
                  <%= @challenge.end_date.strftime("%a %b #{@challenge.end_date.day.ordinalize},  %Y") %>
                </em>
              </h5>
          </div>
          <div class="row">
            <div class="col">
              <h5 class="card-text">
                <strong>Activity:</strong> <em><%= @challenge.activity_name %></em>
              </h5>
              <h5 class="card-text">
                <strong>Goal Activity Reps</strong>
                <%= @challenge.activity_reps %>
              </h5>
            </div>
            <div class="col px-3">
              <h5 class="card-title">
                <%= link_to(@challenge.group.name, group_path(@challenge.group)) %>
              </h5>
              <h5 class="card-title">
                <strong>Particpating Members: </strong>
              </h5>
              <p class="card-text">
                <ul>
                  <% @challenge.group.users.each do |user| %>
                    <li><%= link_to(user.name, user_path(user)) %></li>
                  <% end %>
                </ul>
                <h6 class="card-title">
                  Loser Donates to:
                </h6>
                <h5 class="card-text">
                  <%= @challenge.charity.name%>
                </h5>
                <p class="card-text">
                  <em><%= @challenge.charity.description %></em>
                </p>
                <a href=<%=@challenge.charity.url%> class="card-text">
                  Donate Now!
                </a>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  



<div class="row mx-auto">
<div class="col-md"style="margin-top:20px;">
<div class="card shadow-lg rounded" class="border">
  <table class="table table-striped">
  <tr>
  <h2 class="card-header bg-secondary text-white">
  Challenge Tracker
  </h2>
  </tr>
    <thead>
      <th scope="col">Member</th>
      <th scope="col">Sun</th>
      <th scope="col">Mon</th>
      <th scope="col">Tues</th>
      <th scope="col">Wed</th>
      <th scope="col">Thurs</th>
      <th scope="col">Fri</th>
      <th scope="col">Sat</th>
      <th scope="col">Total</th>
      <th scope="col">Add Reps</th>
    </thead>
    <tbody>
    <% @challenge.trackers.each do |track| %>
      <tr>
          <td scope="row"> <%= track.user.name %></td>
          <td><%= track.sunday_reps%></td>
          <td><%= track.monday_reps%></td>
          <td><%= track.tuesday_reps%></td>
          <td><%= track.wednesday_reps%></td>
          <td><%= track.thursday_reps%></td>
          <td><%= track.friday_reps%></td>
          <td><%= track.saturday_reps%></td>
          <td><%= track.total_reps%></td>
          <td>
            <%= link_to  "+", edit_tracker_path(track.id) %>
          </td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>
</div>



<br>
<div class="row">
<div class="col-sm-6">
<div class="card" style="margin: 15px; padding:15px; margin-left:15px;">
<h6><%= link_to('All challenges', challenges_path) %> |


<%= link_to("Edit", edit_challenge_path(@challenge)) %></h6>
</div>
</div>
</div>