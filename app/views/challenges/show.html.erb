<div class="row" style="width: auto;">
  <div class="col-sm-6">
    <div class="card">
      <h2 class="card-header"> 
        <%= @challenge.name %>
      </h2>
      <div class="card-body">
        <h5 class="card-title">
          <%= @challenge.start_date.strftime("%a %b #{@challenge.start_date.day.ordinalize}, %Y") %> -
          <%= @challenge.end_date.strftime("%a %b #{@challenge.end_date.day.ordinalize},  %Y") %>
        </h5>
        <p class="card-text">
          <strong>Activity:</strong>
          <%= @challenge.activity_name %>
        </p>
        <p class="card-text">
          <strong>Goal Activity Reps</strong>
          <%= @challenge.activity_reps %>
        </p>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <h3 class="card-header"> 
        <%= link_to(@challenge.group.name, group_path(@challenge.group)) %>
      </h3>
      <div class="card-body">
        <h5 class="card-title">
          <strong>Particpating Members: </strong>
        </h5>
 
        <p class="card-text">
          <ul>
            <% @challenge.group.users.each do |user| %>
              <li><%= link_to(user.name, user_path(user)) %></li>
            <% end %>
          </ul>
          <h6 class="card-title">
            Loser Donates to:
          </h6>
          <h5 class="card-text">
            <%= @challenge.charity.name%>
          </h5>
          <p class="card-text">
            <em><%= @challenge.charity.description %></em>
          </p>
          <a href=<%=@challenge.charity.url%> class="card-text">
            Donate Now!
        </a>
        
      </div>
    </div>
  </div>
  </div>


<div class="row">
<div class="col-md">
<div class="card w-auto" style="margin: 20px;">
  <table class="table table-striped">
  <tr>
  <div class="card-header">
  Challenge Tracker
  </div>
  </tr>
    <thead>
      <th scope="col">Member</th>
      <th scope="col">Sun</th>
      <th scope="col">Mon</th>
      <th scope="col">Tues</th>
      <th scope="col">Wed</th>
      <th scope="col">Thurs</th>
      <th scope="col">Fri</th>
      <th scope="col">Sat</th>
      <th scope="col">Total</th>
      <th scope="col">Add Reps</th>
    </thead>
    <tbody>
    <% @challenge.trackers.each do |track| %>
      <tr>
          <td scope="row"> <%= track.user.name %></td>
          <td><%= track.sunday_reps%></td>
          <td><%= track.monday_reps%></td>
          <td><%= track.tuesday_reps%></td>
          <td><%= track.wednesday_reps%></td>
          <td><%= track.thursday_reps%></td>
          <td><%= track.friday_reps%></td>
          <td><%= track.saturday_reps%></td>
          <td><%= track.total_reps%></td>
          <td>
            <%= link_to  "+", edit_tracker_path(track.id) %>
          </td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>
</div>



<br>
