<h1><%= @group.name %></h1>


<h4>Members:</h4>
<ul>
  <% @group.users.each do |user| %>
    <li><%= link_to(user.name, user_path(user)) %></li>
  <% end %>
</ul>

<h4>Challenges:</h4>
<ul>
  <% @group.challenges.each do |challenge| %>
    <li><%= link_to(challenge.name, challenge_path(challenge)) %></li>
  <% end %>
</ul>

<h2><%= link_to('All Groups', groups_path) %> |


<%= link_to("Edit", edit_group_path(@group)) %></h2>