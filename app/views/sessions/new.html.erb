<div class="card w-50">
<h2 class="card-header bg-dark text-light">Login</h2>
<p id="notice">
    <%= notice %>
</p>



<%if flash[:info] %>
   
    
    <h3><%= flash[:info] %></h3>

    <% end %>

<% if @error %>
  <p style="color: red;"><%= @error %></p>
<% end %>

<%= form_tag do %>
  <div class="form-group">
    <%= label_tag("email: ") %>
    <%= text_field_tag(:email) %>
  </div>
  <div class="form-group">
    <%= label_tag("Password: ") %>
    <%= password_field_tag(:password) %>
  </div>
  <div class="form-group" style="margin-left: 280px; font-size:18px;">
    <%= submit_tag("Login", class: "btn btn-primary") %>
  </div>
  <div class="form-group ml-4">
    <p><%=link_to("forgotten password?", new_password_reset_path) %></p>
  </div>
  <div class="form-group ml-4">
    <%= label_tag :remember_me %>
      <%= check_box_tag :remember_me, 1, params[:remember_me] %>
  </div>
<% end %>


<h5 class="card-footer"><%= link_to 'Sign-Up', new_user_path %></h5>
</div>