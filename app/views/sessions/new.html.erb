<h1> Sweat Clause </h1>
<h2 style="color: black;"> Get in Shape or Donate </h2>
<br>



<h2>Login</h2>
<p id="notice">
    <%= notice %>
</p>



<%if flash[:info] %>
   
    
    <h3><%= flash[:info] %></h3>

    <% end %>

<% if @error %>
  <p style="color: red;"><%= @error %></p>
<% end %>

<%= form_tag do %>
  <%= label_tag("Username: ") %>
  <%= text_field_tag(:username) %>
  <%= label_tag("Password: ") %>
  <%= password_field_tag(:password) %>
  <%= submit_tag("Login") %>
<% end %>


<p><%= link_to 'Create an User Account', new_user_path %></p>